{
  "name": "react-translator2",
  "version": "0.1.0",
  "description": "A deadly simple i18n translate plugin for React, ready for Server Side Rendering.",
  "main": "dist/cjs/react-translator.js",
  "module": "dist/es/index.js",
  "unpkg": "dist/umd/react-translator.js",
  "repository": "git@github.com:JounQin/react-translator.git",
  "author": "JounQin <admin@1stg.me>",
  "license": "MIT",
  "scripts": {
    "build:es": "tsc -P tsconfig.build.json --outDir dist/es -d",
    "build:cjs": "cross-env FORMAT=cjs rollup -c",
    "build:umd": "concurrently \"rollup -c\" \"cross-env NODE_ENV=production rollup -c\"",
    "build": "rimraf dist && npm run build:es && concurrently \"npm run build:cjs\" \"npm run build:umd\"",
    "dev": "webpack-dev-server --color --hot --progress",
    "docs": "rimraf docs && cross-env NODE_ENV=production webpack --color --progress -p",
    "lint": "tslint -p . -e 'node_modules/**' -e 'dist/**' -t stylish '**/*.{ts,tsx}'",
    "test": "rimraf test/__snapshots__ && cross-env NODE_ENV=development jest -u",
    "precommit": "lint-staged && npm run docs && git add -A",
    "prepush": "npm run test",
    "prepublishOnly": "npm run build"
  },
  "files": ["dist/**/*.js", "dist/**/*.d.ts"],
  "types": "dist/es/index.d.ts",
  "babel": {
    "presets": [
      [
        "@babel/env",
        {
          "modules": false
        }
      ],
      "@babel/react"
    ],
    "plugins": ["react-hot-loader/babel"],
    "env": {
      "production": {
        "plugins": [
          [
            "transform-react-remove-prop-types",
            {
              "removeImport": true
            }
          ]
        ]
      }
    }
  },
  "jest": {
    "collectCoverage": true,
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    },
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "\\/test\\/.*|\\.spec\\.tsx?$",
    "moduleFileExtensions": ["js", "json", "node", "ts", "tsx"]
  },
  "lint-staged": {
    "*.{json,md}": ["prettier --write", "git add"],
    "*.ts": ["tslint -p . -t stylish --fix", "git add"]
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all",
    "overrides": [
      {
        "files": "*.json",
        "options": {
          "printWidth": 120
        }
      }
    ]
  },
  "peerDependencies": {
    "react": "^16.2.0",
    "react-dom": "^16.2.0"
  },
  "dependencies": {
    "hoist-non-react-statics": "^2.5.0"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0-beta.47",
    "@babel/preset-env": "^7.0.0-beta.47",
    "@babel/preset-react": "^7.0.0-beta.47",
    "@types/enzyme": "^3.1.10",
    "@types/enzyme-adapter-react-16": "^1.0.2",
    "@types/html-webpack-plugin": "^2.30.3",
    "@types/jest": "^22.2.3",
    "@types/lodash": "^4.14.108",
    "@types/node": "^10.0.9",
    "@types/prop-types": "^15.5.2",
    "@types/react": "^16.3.14",
    "@types/react-dom": "^16.0.5",
    "@types/react-hot-loader": "^4.1.0",
    "@types/react-test-renderer": "^16.0.1",
    "@types/webpack": "^4.1.6",
    "babel-loader": "^8.0.0-beta.2",
    "babel-plugin-transform-react-remove-prop-types": "^0.4.13",
    "concurrently": "^3.5.1",
    "cross-env": "^5.1.5",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "fork-ts-checker-webpack-plugin": "^0.4.1",
    "html-loader": "^0.5.5",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^0.14.3",
    "jest": "^22.4.3",
    "lint-staged": "^7.1.0",
    "lodash-es": "^4.17.10",
    "prettier": "^1.12.1",
    "prop-types": "^15.6.1",
    "pug": "^2.0.3",
    "pug-html-loader": "^1.1.5",
    "react": "^16.3.2",
    "react-dom": "^16.3.2",
    "react-hot-loader": "^4.1.3",
    "react-test-renderer": "^16.3.2",
    "rimraf": "^2.6.2",
    "rollup": "0.59.0",
    "rollup-plugin-buble": "^0.19.2",
    "rollup-plugin-replace": "^2.0.0",
    "rollup-plugin-uglify": "^3.0.0",
    "ts-jest": "^22.4.6",
    "ts-loader": "^4.3.0",
    "ts-node": "^6.0.3",
    "tslint": "^5.10.0",
    "tslint-config-prettier": "^1.12.0",
    "tslint-language-service": "^0.9.9",
    "tslint-plugin-prettier": "^1.3.0",
    "tslint-react": "^3.6.0",
    "typescript": "^2.8.3",
    "webpack": "^4.8.3",
    "webpack-cli": "^2.1.3",
    "webpack-dev-server": "^3.1.4"
  }
}
