{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "alwaysStrict": true,
    "baseUrl": ".",
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "jsx": "react",
    "lib": ["dom", "esnext"],
    "moduleResolution": "node",
    "noImplicitAny": true,
    "paths": {
      "*": ["src/*"]
    },
    "plugins": [
      {
        "name": "tslint-language-service"
      }
    ],
    "sourceMap": true
  },
  "exclude": ["node_modules"]
}
